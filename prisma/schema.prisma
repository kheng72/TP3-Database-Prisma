generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
}

model User {
  id        String   @id
  username  String   @unique
  password  String
  role      String
  createdAt DateTime @default(now())

  auditLogs AuditLog[]
}

model Zone {
  id    String @id
  name  String @unique

  devices Device[]
}

model Ad {
  id        String   @id
  name      String
  url       String
  type      String
  createdAt DateTime @default(now())

  devices    Device[]
  activities Activity[]
}

model Device {
  id          String   @id
  macAddress  String   @unique
  deviceName  String
  roomNumber  String
  ipAddress   String
  status      String
  adUrl       String
  lastCommand String
  lastSeen    DateTime?

  zoneId String
  adId   String?

  zone Zone @relation(fields: [zoneId], references: [id])
  ad   Ad?  @relation(fields: [adId], references: [id])

  scanLogs ScanLog[]
}

model Activity {
  id          String   @id
  title       String
  description String
  imageUrl    String
  startTime   DateTime
  endTime     DateTime

  adId String?

  ad        Ad?        @relation(fields: [adId], references: [id])
  scanLogs  ScanLog[]
}

model ScanLog {
  id         Int      @id @default(autoincrement())
  deviceId   String
  activityId String?
  scannedAt  DateTime @default(now())

  device   Device   @relation(fields: [deviceId], references: [id])
  activity Activity? @relation(fields: [activityId], references: [id])
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    String
  username  String
  action    String
  targetId  String
  details   Json
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}